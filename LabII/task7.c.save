#include <stdio.h>
#include <stdlib.h>
#include <math.h>

double Recalc2EpsRecurrent(double, long);

/**Infinity Row высчитывает сумму ряда с определенной точностью*/
double ExpNegX(double x){
    return 1 + Recalc2EpsRecurrent(x, 1);
}

int depth = 2000;
int current_depth = 0;
double Recalc2EpsRecurrent(double x, long n){
    current_depth++;
    printf("f(x)=%c1 * %lf / %d");
    int sign = n % 2 ? -1 : 1;
    double f = sign * x / (n *= n++);
    if(current_depth > depth) {
        printf("too deep");
        return 0;
    }
    if(f > 1e-4) return f += Recalc2EpsRecurrent(x*x, n);
    else return f;
}

